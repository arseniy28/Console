<Page x:Class="Project_WPF_3.Page.OrdersPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказы" Height="400" Width="600">
    <Grid>
        <DataGrid Name="OrdersDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="343" Margin="10,10,10,50" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Name="AddButton" Content="Добавить" Width="100" Click="AddButton_Click" />
            <Button Name="EditButton" Content="Изменить" Width="100" Click="EditButton_Click" Margin="10,0,0,0" />
            <Button Name="DeleteButton" Content="Удалить" Width="100" Click="DeleteButton_Click" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Page>
